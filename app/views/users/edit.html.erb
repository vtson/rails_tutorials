<% provide :title, t(".title") %>
<h1><%= t ".h1" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", path: user_path, user: @user, genders: @genders %>
    <div class="gravatar_edit">
      <%= link_to "http://gravatar.com/emails", target: "_blank" do %>
        <%= gravatar_for @user %>
        <%= t ".change_avatar" %>
      <% end %>
    </div>
  </div>
</div>
