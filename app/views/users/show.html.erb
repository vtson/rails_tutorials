<% provide :title, @user.displayname %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.displayname %>
        <%= @user.gender %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats", user: @user %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form",user: @user,
      relation_do: @relation_do if logged_in? %>
    <% if @user.microposts.any? %>
      <h3><%= t ".h3" %>(<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render partial: "microposts/micropost",
          collection: @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
