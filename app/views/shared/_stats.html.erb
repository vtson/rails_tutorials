<% user ||= current_user %>
<div class="stats">
  <%= link_to followings_url user do %>
    <strong id="following" class="stat">
      <%= user.following.count %>
    </strong>
    <%= t ".following" %>
  <% end %>
  <%= link_to followers_url user do %>
    <strong id="followers" class="stat">
      <%= user.followers.count %>
    </strong>
    <%= t ".followers" %>
  <% end %>
</div>
